<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<smartplaylist type="movies">
    <name>Random Movie (Non-Recent)</name>
    <match>all</match>
    <rule field="lastplayed" operator="notinthelast">
        <value>1 month</value>
    </rule>
    <limit>1</limit>
    <order direction="ascending">random</order>
</smartplaylist>